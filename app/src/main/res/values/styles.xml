<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MYdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="no_brackground_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="insurance_help_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="table_popup_activity" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/table_popup_dim_color</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="table_share_activity" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="GameDialog" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/table_popup_dim_color</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ADADAD</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="pending_text_user_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/game_end_user_bg</item>
    </style>

    <style name="im_profile_picture">
        <item name="android:layout_width">@dimen/im_message_profile_picture_length</item>
        <item name="android:layout_height">@dimen/im_message_profile_picture_length</item>
        <item name="android:src">@drawable/people_head</item>
    </style>

    <style name="im_username">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/im_username_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#969696</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="im_text_message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/im_message_dialog_min_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/im_message_dialog_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/im_message_dialog_text_line_spacing_extra</item>
    </style>

    <style name="general_yes_button">
        <item name="android:background">@drawable/dialog_yes_btn_bg_selector</item>
        <item name="android:textColor">@color/general_btn_yes_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="general_no_button" parent="general_yes_button">
        <item name="android:background">@drawable/dialog_no_btn_bg_selector</item>
    </style>

    <style name="dialog_notitle_no_button">
        <item name="android:background">@drawable/dialog_notitle_no_btn_bg_selector</item>
        <item name="android:textColor">@color/dialog_notitle_btn_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="dialog_notile_yes_button" parent="general_no_button">
        <item name="android:background">@drawable/dialog_notitle_yes_btn_bg_selector</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">120dp</item>
    </style>

    <style name="dialog_animate" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画
    </style>

    <style name="SplashTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
