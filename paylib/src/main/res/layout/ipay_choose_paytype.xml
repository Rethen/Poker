<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center"
  android:orientation="vertical">
  	  <RelativeLayout
	  	android:orientation="horizontal"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:layout_gravity="center_horizontal">
		  <ImageView
			  android:id="@+id/grid_paytype_image"
			  android:layout_width="@dimen/ipay_common_choosetype_width"
			  android:layout_height="@dimen/ipay_common_choosetype_height"
			  android:gravity="center"
			  android:layout_gravity="center" 
			  android:scaleType="centerInside">
		  </ImageView> 
		  <View
			  android:layout_width="@dimen/ipay_common_choosetype_width"
			  android:layout_height="@dimen/ipay_common_choosetype_height"
			  android:gravity="center"
			  android:layout_gravity="center" 
			  android:scaleType="centerInside"
			  android:background="@drawable/ipay_item_selector">
		  </View> 
			<ImageView
			 android:id = "@+id/grid_paytype_subscript_image"
			 android:layout_width="@dimen/ipay_common_choosetype_width"
			 android:layout_height="@dimen/ipay_common_choosetype_height"
			 android:scaleType="centerInside"
			      android:src="@drawable/ipay_recharge_last"
			      android:layout_alignRight="@id/grid_paytype_image"
			      android:layout_alignTop="@id/grid_paytype_image"
			      android:visibility="gone">
			</ImageView>
		  
	  </RelativeLayout>	 
	  <TextView
		  android:id="@+id/grid_paytype_title"
		  android:layout_marginTop="@dimen/ipay_paycenter_gridview_item_margin"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:text=""
		  android:textColor="@color/ipay_black" 
		  android:layout_gravity="center_vertical" 
		  android:gravity="center"
		  android:textSize="@dimen/ipay_fontsize_small_s">
	  </TextView>
</LinearLayout>
