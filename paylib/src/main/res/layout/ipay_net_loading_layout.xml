<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ipay_net_loading_bg" >

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="113dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >
            
        <ProgressBar
			android:id="@+id/loading_image" 
            android:layout_width="@dimen/ipay_loading_wh"
            android:layout_height="@dimen/ipay_loading_wh"
            android:background="@drawable/ipay_tag_loading_bg"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/ipay_tag_scroll_loading" />

        <TextView
            android:id="@+id/identify_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/ipay_hint_loading"
            android:textColor="@color/ipay_white"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>